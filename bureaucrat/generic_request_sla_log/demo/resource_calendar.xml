<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <!-- Example SLA Calendar -->

        <record id="example_sla_calendar" model="resource.calendar">
            <field name="name">45 Hours/Week</field>
            <field name="attendance_ids" eval="[]"/>
        </record>

        <record model="resource.calendar.attendance" id="sla_calendar_attendance_mon1">
            <field name="name">Monday morning</field>
            <field name="dayofweek">0</field>
            <field name="hour_from">08</field>
            <field name="hour_to">12</field>
            <field name="calendar_id" ref="example_sla_calendar"/>
        </record>
        <record model="resource.calendar.attendance" id="sla_calendar_attendance_mon2">
            <field name="name">Monday evening</field>
            <field name="dayofweek">0</field>
            <field name="hour_from">13</field>
            <field name="hour_to">18</field>
            <field name="calendar_id" ref="example_sla_calendar"/>
