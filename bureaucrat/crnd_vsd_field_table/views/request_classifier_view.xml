<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="view_request_classifier_form">
        <field name="model">request.classifier</field>
        <field name="inherit_id" ref="generic_request.view_request_classifier_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='create_settings_website']" position="inside">
                <field name="create_show_field_table" widget="boolean_toggle" string="Field Table" />
            </xpath>

            <xpath expr="//group[@name='read_settings_website']" position="inside">
                <field name="read_show_field_table" widget="boolean_toggle" string="Field Table" />
            </xpath>

        </field>
    </record>
</odoo>
