<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sh_project_config_setting_view" model="ir.ui.view">
        <field name="name">res.config.settings</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="project.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//block[@name='project_time']" position="after">
                <h2>Task timer configuration</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="sh_is_default_description" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="sh_is_default_description" />
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="sh_multiple_task" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="sh_multiple_task" />
                        </div>
                    </div>
                </div>
            </xpath>

        </field>
    </record>
</odoo>