<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="generic_request_res_config_settings_view_form" model="ir.ui.view">
        <field name="model">res.config.settings</field>
        <field name="priority" eval="20"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@name='request_global_settings']" position="inside">
                <div class="col-xs-12 col-md-6 o_setting_box">
                    <div class="o_setting_right_pane">
                        <label for="request_invoice_line_description_tmpl"/>
                        <div>
                            <field name="request_invoice_line_description_tmpl"
                                   style="width: 100%"/>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
